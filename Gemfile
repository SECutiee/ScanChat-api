# Web API
gem 'json'
gem 'puma'
gem 'roda'

# Configuration
gem 'figaro'
gem 'rake'

# Security
gem 'bundler-audit'
gem 'rbnacl'

# Testing
group :test do
  gem 'minitest'
  gem 'minitest-rg'
  gem 'rack-test'
end

# Development
gem 'hirb'
gem 'pry'
gem 'rerun'

# Quality
gem 'rubocop'

# Performance
gem 'rubocop-performance'

# Parsing
